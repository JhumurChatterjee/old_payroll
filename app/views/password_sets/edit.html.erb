<% provide(:title, "Set Password") %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12">
      <h3 class="text-center">Create Organization</h3>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8">
      <div class="card">
        <div class="card-body">
          <%= form_for :password_set, url: password_set_path, method: :put do |f| %>
            <div class="form-group">
              <%= f.label :password, "Password" %>
              <%= f.password_field :password, class: "form-control", autofocus: true, required: true, placeholder: "Email Address", maxlength: 100 %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Password Confirmation" %>
              <%= f.password_field :password_confirmation, class: "form-control", autofocus: true, required: true, placeholder: "Password Confirmation", maxlength: 100 %>
            </div>

            <%= f.submit "Set Password", class: "btn btn-primary btn-xs-block", data: { disable_with: "Saving..." } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
