<div class="row justify-content-center">
  <div class="col-sm-12 col-md-8">
    <div class="card">
      <div class="card-body">
        <%= form_for :organization do |f| %>
          <div class="form-group">
            <%= f.label :name, "Organization Name" %>
            <%= f.text_field :name, class: "form-control", autofocus: true, required: true, placeholder: "Organization Name", maxlength: 100 %>
          </div>

          <div class="form-group">
            <%= f.label :email, "Email address" %>
            <%= f.email_field :email, class: "form-control", autofocus: true, required: true, placeholder: "Email Address", maxlength: 100 %>
          </div>

          </br>

          <%= f.submit class: "btn btn-primary btn-xs-block", data: { disable_with: "Saving..." } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
